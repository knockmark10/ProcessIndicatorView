<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <View
        android:id="@+id/process_track"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/process_first_stage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/process_track"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/process_track">

        <ImageView
            android:id="@+id/process_first_stage_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/process_second_stage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/process_track"
        app:layout_constraintEnd_toStartOf="@+id/process_third_stage"
        app:layout_constraintStart_toEndOf="@+id/process_first_stage"
        app:layout_constraintTop_toTopOf="@+id/process_track">

        <ImageView
            android:id="@+id/process_second_stage_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/process_third_stage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/process_track"
        app:layout_constraintEnd_toStartOf="@+id/process_fifth_stage"
        app:layout_constraintStart_toEndOf="@+id/process_first_stage"
        app:layout_constraintTop_toTopOf="@+id/process_track">

        <ImageView
            android:id="@+id/process_third_stage_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/process_fourth_stage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/process_track"
        app:layout_constraintEnd_toStartOf="@+id/process_fifth_stage"
        app:layout_constraintStart_toEndOf="@+id/process_third_stage"
        app:layout_constraintTop_toTopOf="@+id/process_track">

        <ImageView
            android:id="@+id/process_fourth_stage_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/process_fifth_stage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/process_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/process_track">

        <ImageView
            android:id="@+id/process_fifth_stage_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>